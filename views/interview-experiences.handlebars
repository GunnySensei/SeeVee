<article class="interview-article">

  <section class="interview-hero homepage-image">
    <h1>INTERVIEW EXPERIENCES</h1>
  </section>

  <section class="just-padding">
    <h2>Submit Interview Experiences</h2>

    <form class="account-form new-interview-form">
      <div class="post just-width">
        <label for="title">Title:</label>
        <input type="text" class="submission-form just-width" id="title" name="title" />
      </div>
      <div class="post just-width">
        <label for="company">Company:</label>
        <input class="submission-form just-width" id="company" name="company" />
      </div>
      <div class="post just-width">
        <label for="description">Description:</label>
        <input class="submission-form just-width" id="description" name="description" />
      </div>
      <div class="account-button">
        <button type="submit" class="btn">Create</button>
      </div>

    </form>
  </section>

  <section>
    <h2>Interview Experiences</h2>
    <p>Help your fellow developer by sharing your experiences interviewing with prospective employers.</p>
      <div>
        {{#each interviews as |interview|}}
        <div>
          {{> interview-info interview}}
        </div>
        {{/each}}
      </div>
  </section>
</article>

<script src="/javascript/add-interview.js"></script>