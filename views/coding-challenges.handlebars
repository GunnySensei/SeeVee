<article class="homepage-article">

  <section class="challenges-hero homepage-image">
    <h1>CODING CHALLENGES</h1>
  </section>

  <section class="just-padding">
  <h2>Submit Coding Challenge</h2>

  <form class="login-form account-form new-challenge-form">
    <div class="post just-width">
      <label for="title">Title:</label>
      <input type="text" class="submission-form just-width" id="title" name="title" />
    </div>
    <div class="post just-width">
      <label for="code_url">Link:</label>
      <input class="submission-form just-width" id="code_url" name="code_url" />
    </div>
    <div class="account-button">
      <button type="submit" class="btn">Create</button>
    </div>
    
  </form>
</section>

    <section>
        <div>
            {{#each challenges as |challenge|}}
            <div>
                {{> code-info challenge}}
            </div>
            {{/each}}
        </div>
    </section>

</article>

<script src="/javascript/add-challenge.js"></script>


