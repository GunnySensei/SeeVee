<section>
  <h2>Submit Coding Challenge</h2>

  <form class="new-challenge-form">
    <div>
      <label for="title">Title</label>
      <input type="text" id="title" name="title" />
    </div>
    <div>
      <label for="code_url">Link</label>
      <input id="code_url" name="code_url" />
    </div>
      <button type="submit" class="btn">Create</button>
  </form>
</section>

<article class="homepage-article">

  <section class="challenges-hero homepage-image">
    <h1>CODING CHALLENGES</h1>
  </section>
    <section>
        <h2>CHALLENGES</h2>
        <ol>
            {{#each challenges as |challenge|}}
            <li>
                {{> code-info challenge}}
            </li>
            {{/each}}
        </ol>
    </section>

</article>

<script src="/javascript/add-challenge.js"></script>