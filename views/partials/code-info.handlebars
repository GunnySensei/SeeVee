<section class="content-card flex-row">
  <div class="code">
    <a href="{{code_url}}" target="_blank"><h3
        style="color: black"
      >{{title}}</h3></a>
    <button class="upvote-btn">Helpful: {{vote_count}}</button>
    <p>Submitted by:
      {{user.username}}
      | on:
      {{createdAt}}
    </p>
    <button class="delete-btn">Delete</button>
    <button class="edit-btn">Edit</button>
  </div>
</section>

